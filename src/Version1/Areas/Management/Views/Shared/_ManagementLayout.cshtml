<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Southalive</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/management_site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Home/Index" class="navbar-brand">Southalive</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="ManageIndex" asp-action="Index">Mainpage</a> </li>
                    <li><a asp-controller="TeamManage" asp-action="Index">Team</a></li>
                    <li><a asp-controller="Volunteer" asp-action="Index">Volunteer</a></li>
                    <li><a asp-controller="Galleries" asp-action="Index">Gallery</a></li>
                    <li class="dropdown" id="se1">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            News Manage <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><a asp-controller="News" asp-action="Index">News</a> </li>
                            <li><a asp-controller="News" asp-action="CensorIndex">Censor</a></li>
                        </ul>
                        
                    </li>
                    <li><a asp-controller="Events" asp-action="Index">Event</a></li>
                    <li><a asp-controller="Newsletters" asp-action="Index">Newsletter</a></li>
                    <li class="dropdown" id="se2">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Role Manage <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Management/RoleManage/RoleManage">Role Manage</a></li>
                            <li><a href="/Management/RoleManage/EditRoles"> Role and User</a></li>
                        </ul>
                    </li>
                    <li class="dropdown" id="se3">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Authorization Managment  <span class="caret"></span>
                        </a>                      
                        <ul class="dropdown-menu">
                            <li><a href="/Management/Authorization_Object/index">Authorization Resource </a></li>
                            <li><a href="/Management/Authorization_Object_Role/index">Authorization and Role  </a></li>
                        </ul>
                    </li>
                   
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - Version1</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery-1.12.4.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery-1.12.4.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>
