@model Team

<form asp-area="Management" asp-controller="TeamManage" asp-action="Create" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Team</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="TeamName" class="col-md-2 control-label">Team Name</label>
            <div class="col-md-10">
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger" />
            </div>
        </div>

        
        <div class="form-group">
            <label asp-for="TeamDescription" class="col-md-2 control-label">Team Description</label>
            <div class="col-md-10">
                <input asp-for="TeamDescription" class="form-control" />
                <span asp-validation-for="TeamDescription" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label   class="col-md-2 control-label">Team Picture</label>
            <div class="col-md-7" style="align-content:center">
                <input type="file" id="NewsImagepp" value="Open file" title="Open file" accept=".JPG,.JPEG,.GIF,.PNG,.bmp" name="NewsImagepp" />
                <img id="opop" src="~/images/Teams/" align="left" hidden="hidden" width="190" height="210" display=inline>

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-area="Management" asp-controller="TeamManage" asp-action="Index">Back to List</a>
</div>


@section Scripts {
    <script src="//code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="//rawgithub.com/indrimuska/jquery-editable-select/master/dist/jquery-editable-select.min.js"></script>
    <script src="/lib/ckeditor/ckeditor.js"></script>
    <link href="//rawgithub.com/indrimuska/jquery-editable-select/master/dist/jquery-editable-select.min.css" rel="stylesheet">


    <script>
    $(function () {
        
   var  getobjectpath= function (file) {
        var url = null;
        if (window.createObjectURL != undefined) {
            url = window.createObjectURL(file)
        } else if (window.URL != undefined) {
            url = window.URL.createObjectURL(file)
        } else if (window.webkitURL != undefined) {
            url = window.webkitURL.createObjectURL(file)
        }
        return url
    };
   $("#NewsImagepp").change(function () {
        var imagepath = getobjectpath(this.files[0]);
        if (imagepath != "") {
            $("#opop").attr('src', imagepath);
            $("#opop").fadeIn(1000);
        }
   });
    });
    </script>
}