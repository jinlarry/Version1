                <div class="col-md-4 div_image">
                    <img class="img-center img-responsive sponsorImg" src="~/images/southroadslogo.png" alt="Alternate Text" />
                </div>
                <div class="col-md-4 div_image">
                    <img class="img-center img-responsive sponsorImg" src="~/images/icclogo.png" alt="Alternate Text" />
                </div>
                <div class="col-md-4 div_image">
                    <img class="img-center img-responsive sponsorImg" src="~/images/iltlogo.png" alt="Alternate Text" />
                </div>
            </div>
        </div>
    </div>
</div>

