</div>

<div id="div_events">
    <div class="container">
        <div>
            <h1 class="text-center">Recent events</h1>
            <h5 class="text-center"><em>ipsum dolor sit amet consectetur.</em></h5>
        </div>
        <br />
        @foreach(var e in Model.Events)
        {
            <div class="col-md-3">
                <img class="img-responsive" style="width:690px;height:200px" src="~/images/Events/@e.event_picture" />
                <div class="event_info">
                    <strong><i>@e.event_name</i></strong>
                    <address>@e.event_address</address>
                    <strong>@e.event_datetime.ToString()</strong>
                    <p><i>@e.event_profile</i></p>
                </div>
            </div>
        }
    </div>
</div>

<div id="div_sponsors">
    <div class="container">
        <h1 class="text-center">Sponsors</h1>
        <div id="div_images" class="row">
            <div class="row">
                <div class="col-md-4 div_image">
                    <img class="img-center img-responsive sponsorImg" src="~/images/ctoslogo.png" alt="Alternate Text" />
                </div>
                <div class="col-md-4 div_image">
                    <img class="img-center img-responsive sponsorImg" src="~/images/iltlogo.png" alt="Alternate Text" />
                </div>
                <div class="col-md-4 div_image">
                    <img class="img-center img-responsive sponsorImg" src="~/images/pocock.png" alt="Alternate Text" />
                </div>
            </div>
