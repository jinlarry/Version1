<!-- Image Background Page Header -->
<!-- Note: The background image is set within the business-casual.css file. -->
@model HomeIndexViewModel

@section styles{
    <style>
        #div_images {
            margin-top: 30px;
        }

        .div_image {
            min-height: 180px;
            height: 220px;
        }

        .sponsorImg {
            max-width: 250px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
        }

        #div_news {
            margin-top: 30px;
            margin-bottom: 30px;
        }

        #div_events {
            margin-top: 30px;
            color: white;
            background-color: #76c49e;
            text-align: center;
            padding-bottom: 30px;
        }

        .event_info {
            margin-top: 10px;
            background-color: black;
            padding-top: 15px;
            padding-bottom: 15px;
        }

        #div_sponsors {
            margin: 0;
            background-color: blanchedalmond;
        }
        hr{
            
        }
    </style>
}

<header class="business-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" style="margin-top:15%">
                <h1 class="tagline">Business Name or Tagline</h1>
                <p>"A vibrant and diverse community that takes the lead in its own future.."</p>
            </div>
        </div>
    </div>
</header>

