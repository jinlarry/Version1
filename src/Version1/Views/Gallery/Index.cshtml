@section styles{
    <style>
        body {
            background: #82a1c4;
        }

        #title {
            color: #fff;
            text-align: center;
        }

        #imageGallery {
            list-style: none;
            margin: 0 auto;
            padding: 0;
            display: block;
            max-width: 780px;
            text-align: center;
        }

        .single_image {
            display: inline-block;
            padding: 8px;
            background: white;
            margin: 10px;
            transition: all .2s ease-in-out;
        }

        .borderedImg {
            border: 10px solid rgba(0,0,0,.7);
        }

        #imageGallery .single_image img {
            display: block;
        }

        a {
            text-decoration: none;
        }

        /** Start Coding Here **/
        #overlay {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            display: none;
            text-align: center;
        }

            #overlay img {
                margin-top: 10%;
            }

            #overlay p {
                color: white;
            }

        img#thumb {
            width: 200px;
        }

            img#thumb:hover {
                z-index: 15;
            }

        #imageGallery li:hover {
            transform: scale(1.2);
            z-index: 10;
        }
    </style>
}

