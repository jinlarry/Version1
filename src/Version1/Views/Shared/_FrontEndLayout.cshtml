<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Southalive</title>

    <environment names="Development">
        <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" type="text/css" href="~/css/frontpage.css" />
        <link rel="stylesheet" type="text/css" href="~/css/style.css" />
        <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" type="text/css" />
        <link href="~/lib/bootstrap/dist/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

        <!-- font-awesome -->
        <link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

        <!-- content tool -->
        <link href="~/lib/ContentTool/content-tools.min.css" rel="stylesheet" type="text/css" />

        @RenderSection("style", required: false)
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        @*<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />*@
    </environment>
</head>

<body>
    <div class="navbar navbar-fixed-top" style="margin:0">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Southalive</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            News <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Newsletters</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Teams <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Children &amp; Youth</a></li>
                            <li><a href="#">South City</a></li>
                            <li><a href="#">Stronger Neighbourhoods</a></li>
                            <li><a href="#">Arts</a></li>
                            <li><a href="#">Housing</a></li>
                            <li><a href="#">Beautification</a></li>
                            <li><a href="#">Fruit &amp; Nut Trees</a></li>
                            <li><a href="#">Marketing &amp; Events</a></li>
                            <li><a href="#">Dog Park</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Events <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Book A Venue</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            About Us <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a asp-controller="Gallery" asp-action="Index">Gallery</a></li>
                        </ul>
                    </li>
                    <li><a asp-controller="#" asp-action="Index">Sponsors</a></li>
                    <li><a asp-controller="#" asp-action="Index">Contact Us</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="body-content container">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <p>Copyright &copy; Southalive 2016</p>
                </div>
                <div class="col-md-8">
                    <strong>Office</strong>:Shop 6, South City Mall. PO Box 7055, South Invercargill
                    |
                    <strong>Email</strong>: <a href="mailto:#">southalive@gmail.com</a>
                </div>
                <div class="col-md-1">
                    <a href="https://www.facebook.com/SouthAlive">
                        <img src="~/images/FB-f-Logo__blue_29.png" />
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <environment names="Development">
        <script type="text/javascript" src="~/lib/jquery/dist/jquery-1.12.4.js"></script>
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script type="text/javascript" src="~/lib/jquery/dist/jquery-ui.min.js"></script>
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

        <!-- content tool -->
        <script src="~/lib/ContentTool/content-tools.min.js"></script>

        @RenderSection("scripts", required: false)
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery-1.12.4.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.5/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
</body>
</html>
